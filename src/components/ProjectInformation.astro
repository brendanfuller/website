---
export interface Props {
  name: string;
  demo?: string;
  github?: string;
  icon?: string;
  alt?: string;
}

const { github, demo, icon, name } = Astro.props;
---

<div class="mt-5 mb-5">
  <h2 class="font-bold">{name}</h2>
  <div>
    {
      icon && (
        <img src={icon} width="100" height="100" class="float-left mr-5" />
      )
    }
    <slot />
  </div>
  <br />
  {
    demo && (
      <a href={demo} class="underline font-bold">
        Demo
      </a>
    )
  }{
    github && (
      <a href={github} class="underline font-bold">
        Github
      </a>
    )
  }
</div>
<hr />
